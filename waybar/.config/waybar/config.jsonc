{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    //"height": 30, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    // "spacing": 4, // Gaps between modules (4px)

    // ░█▀▀░█▀▀░█▀▀░▀█▀░▀█▀░█▀█░█▀█░█▀▀
    // ░▀▀█░█▀▀░█░░░░█░░░█░░█░█░█░█░▀▀█ 
    // ░▀▀▀░▀▀▀░▀▀▀░░▀░░▀▀▀░▀▀▀░▀░▀░▀▀▀
    // Sections

    "modules-left": [
        "clock",
        "hyprland/window",
        "mpris"
        //"custom/media"
    ],
    "modules-center": [
        "hyprland/workspaces"
    ],
    "modules-right": [
        "mpd",
        "pulseaudio",
        "group/net",
        "group/system",
        "backlight",
        "custom/brightness",
        "battery",
        "tray"
        //"custom/power"
    ],

    // ░█▄█░█▀█░█▀▄░█░█░█░░░█▀▀                            
    // ░█░█░█░█░█░█░█░█░█░░░█▀▀                            
    // ░▀░▀░▀▀▀░▀▀░░▀▀▀░▀▀▀░▀▀▀                            
    // ░█▀▀░█▀█░█▀█░█▀▀░▀█▀░█▀▀░█░█░█▀▄░█▀█░▀█▀░▀█▀░█▀█░█▀█
    // ░█░░░█░█░█░█░█▀▀░░█░░█░█░█░█░█▀▄░█▀█░░█░░░█░░█░█░█░█
    // ░▀▀▀░▀▀▀░▀░▀░▀░░░▀▀▀░▀▀▀░▀▀▀░▀░▀░▀░▀░░▀░░▀▀▀░▀▀▀░▀░▀
    // Modules configuration

    "clock": {
        // "timezone": "America/New_York",
        "tooltip-format": "<tt><big>{calendar}</big></tt>",
        "format-alt": "{:%Y-%m-%d}",
        "format": "{:%I:%M %p | %d %a}"
    },
    "hyprland/window": {
        "format": "{title}",
        "max-length": 20
    },
    "mpris": {
        "format": "{player_icon} {artist} - {title}",
        "format-paused": "{status_icon} {artist} - {title}",
        "title-len": 20,
        "player-icons": {
            "default": "",
            "mpv": "🎵",
            "spotify": "",
            "firefox": ""
        },
        "status-icons": {
            "paused": "⏸"
	    }
    },
    "hyprland/workspaces": {
        "enable-bar-scroll": true,
        "all-outputs": true,
        "warp-on-scroll": false,
        "format": "{name}",
        "format-icons": {
            "1": "",
            "2": "",
            "3": "",
            "urgent": "",
            "focused": "",
            "default": ""
        }
    },
    "pulseaudio": {
        "format": "<span font='11' rise='-750'>{icon}</span>  {volume}%",
        "format-bluetooth": "<span font='12' rise='-750'></span> {volume}%",
        "format-muted": "",
        "scroll-step": 5,
        "format-icons":{
            "default":["","",""]
        },
        "on-click": "pavucontrol",
        "ignored-sinks": ["Easy Effects Sink"],
        "max-volume": 150
    },
    "group/net": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 250,
            "children-class": "not-cpu",
            "transition-left-to-right": false
        },
        "modules": [
            "network",
            "network#speed"
        ]
    },
    "network": {
        "interval": 5,
        "format-wifi": "{bandwidthDownBits}⇣{essid} ",
        "format-ethernet": "<span font='12' rise='-1000'></span>  Ethernet",
        "format-linked": "{ifname} (No IP) ",
        "format-disconnected": "Disconnected ⚠",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "tooltip": false,
        "tooltip-format": "{bandwidthDownBits}⇣ {bandwidthUpBits}⇡"
    },
    "network#speed": {
        "interval": 1,
        "format": "{ifname}",
        "format-wifi": " {bandwidthDownBytes}  {bandwidthUpBytes} ",
        "format-ethernet": " {bandwidthDownBytes}  {bandwidthUpBytes} ",
        "format-disconnected": "󰌙",
        "tooltip-format": "{ipaddr}",
        "format-linked": "{ifname} (No IP)",
        "tooltip-format-wifi": "{essid} {icon} {signalStrength}%",
        "tooltip-format-ethernet": "{ifname} 󰌘",
        "tooltip-format-disconnected": "󰌙 Disconnected",
        "max-length": 30,
        "format-icons": ["󰤯","󰤟","󰤢","󰤥","󰤨"]
    },
    "group/system": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 250,
            "children-class": "not-cpu",
            "transition-left-to-right": false
        },
        "modules": [
            "cpu",
            "memory",
            "custom/gpu"
        ]
    },
    "cpu": {
        "interval": 20,
        "format": "CPU {usage}%",
        "max-length": 10,
        "tooltip": true
    },
    "memory": {    
        "interval": 20,
        "format": "MEM {used:0.1f}G/{total:0.1f}G"
    },
    "custom/gpu": {
        "interval": 20,
        "format": "{}",
        "exec": "nvidia-smi --query-gpu=memory.used,memory.total --format=csv,noheader,nounits | awk -F, '{printf \"VRAM %0.1f/%0.1fG\", $1/1024, $2/1024}'"
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "<span font='12' rise='-1000'>{icon}</span> {percent}%",
        "scroll-step": 10,
        "format-icons": ["󰃞", "󰃟", "󰃠"]
    },
    "custom/brightness": {
        "exec": "ddcutil getvcp 10 | grep -oP 'current value =\\s*\\K\\d+'",
        "interval": 10,
        "format": "<span font='12' rise='-1000'>{icon}</span> {text}%",
        "format-icons": ["󰃞", "󰃟", "󰃠"],
        "on-scroll-up": "ddcutil setvcp 10 + 10",
        "on-scroll-down": "ddcutil setvcp 10 - 10"
    },
    "battery": {
        "interval": 60,
        "format": "<span font='13' rise='-1000'>󰁹</span> {capacity}%",
        "format-full": "<span font='13' rise='-1000'>󰁹</span> {capacity}%",
        "format-charging": "<span font='13' rise='-1000'>󰂄</span>  {capacity}%",
        "format-discharging": "<span font='13' rise='-1000'>󰁼</span> {capacity}%",
        "max-length": 25
    },
    "tray": {
        // "icon-size": 21,
        "spacing": 10
        // "icons": {
        //   "blueman-applet": "󰁹"
        //   "TelegramDesktop": "$HOME/.local/share/icons/hicolor/16x16/apps/telegram.png"
         }
    }
}
